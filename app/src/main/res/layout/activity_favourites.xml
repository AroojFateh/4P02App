<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".favourites">

    <View
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/light_blue"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/homeArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/light_blue"
        android:src="@drawable/ic_round_arrow_back_24"
        android:onClick="goHome"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="55dp"
        android:fontFamily="@font/raleway_bold"
        android:text="Favourites"
        android:textColor="@color/dark_blue"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/headerline"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/dark_blue"
        app:layout_constraintBottom_toBottomOf="@id/header" />


    <RelativeLayout
        android:id="@+id/searcher"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/light_blue"
        app:layout_constraintTop_toBottomOf="@id/headerline">

        <ImageButton
            android:id="@+id/closerArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:background="@color/light_blue"
            android:contentDescription="TODO"
            android:onClick="reveal"
            android:src="@drawable/ic_round_keyboard_arrow_up_24"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/standin"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:text="Search favourites"
            android:textAlignment="center"
            android:background="@color/grey"
            android:textSize="30dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/dark_blue" />


    </RelativeLayout>

    <ImageButton
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/light_blue"
        android:contentDescription="TODO"
        android:onClick="reveal"
        android:src="@drawable/ic_round_search_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/botBord"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/dark_blue"
        app:layout_constraintBottom_toTopOf="@id/botNav" />

    <View
        android:id="@+id/botNav"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/light_orange"
        app:layout_constraintBottom_toBottomOf="parent" />


    <ImageButton
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/botBord"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="22dp"
        app:layout_constraintEnd_toStartOf="@id/profile"
        android:background="@color/light_orange"
        android:src="@drawable/ic_round_home_24"
        android:onClick="goHome"/>

    <ImageButton
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/botBord"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="22dp"
        app:layout_constraintEnd_toStartOf="@id/info"
        android:background="@color/light_orange"
        android:src="@drawable/ic_round_person_24"
        android:onClick="goProfile"/>


    <ImageButton
        android:id="@+id/favs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/botBord"
        android:layout_marginTop="15dp"
        android:layout_marginStart="22dp"
        app:layout_constraintStart_toEndOf="@id/info"
        android:background="@color/light_orange"
        android:src="@drawable/ic_round_favorite_page"
        android:onClick="goFavs"/>


    <ImageButton
        android:id="@+id/makePost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/botBord"
        android:layout_marginTop="15dp"
        android:layout_marginStart="22dp"
        app:layout_constraintStart_toEndOf="@id/favs"
        android:background="@color/light_orange"
        android:src="@drawable/ic_round_edit_24"
        android:onClick="goDonos"
        />
    <ImageButton
        android:id="@+id/info"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/botBord"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@id/favs"
        android:background="@null"
        android:src="@drawable/ic_round_info_24"
        android:onClick="goDonos"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/searcher"
        app:layout_constraintBottom_toTopOf="@id/botBord"
        android:tooltipText="List of favourites" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/searcher"
        app:layout_constraintBottom_toTopOf="@id/botBord"
        android:text="List of favourites"
        android:textAlignment="center" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>